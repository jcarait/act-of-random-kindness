<div class="container mt-4">
  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Create a New Volunteer Task:</h3>

      <form class="form new-task-form">
        <div class="row">
          <div class="col-md-12 mt-4">
            <label for="task-name">task name:</label>
            <input class="form-control" type="text" id="task-name" name="task-name" />
          </div>
          <div class="col-md-12 mt-4">
            <label for="task-desc">description:</label>
            <textarea class="form-control" id="task-desc" name="task-desc"></textarea>
          </div>
          <fieldset class="container mt-4">
            <legend>Task Location</legend>
            <div class="row">
              <div class="col-md-6">
                <label for="address">Street Address</label>
                <input class="form-control" id="address" type="text">
              </div>
              <div class="col-md-6">
                <label for="city">City</label>
                <input class="form-control" id="city" type="text">
              </div>
              <div class="col-md-6">
                <label for="state">State</label>
                <input class="form-control" id="state" type="text">
              </div>
              <div class="col-md-6">
                <label for="postcode">Postcode</label>
                <input class="form-control" id="postcode" type="text">
              </div>
            </div>
          </fieldset>
        </div>
        <div class="col-md-12 mt-4">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>

  <script src="./js/createTask.js"></script>